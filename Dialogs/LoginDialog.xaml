<ContentDialog
    x:Class="FluentNetease.Dialogs.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentNetease.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="LoginDialog"
    Title="登录"
    PrimaryButtonText="确认"
    CloseButtonText="取消"
    DefaultButton="Primary"
    CornerRadius="8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="AccountInputBox"
            x:Uid="AccountInputBox"
            TextChanged="AccountInputBox_TextChanged"
            Grid.Row="0"/>
        <PasswordBox
            x:Name="PasswordInputBox"
            x:Uid="PasswordInputBox"
            PasswordChanged="PasswordInputBox_PasswordChanged"
            Grid.Row="2"/>
    </Grid>
</ContentDialog>
