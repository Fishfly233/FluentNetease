<ContentDialog
    x:Class="FluentNetease.Dialogs.LoginFailedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentNetease.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="ErrorDialog"
    Title="错误"
    CloseButtonText="知道了"
    DefaultButton="Close"
    CornerRadius="8">
    <StackPanel>
        <TextBlock x:Uid="LoginErrorText" Width="300" Text="登录时发生了错误，可能是由于账号/密码不正确或网络连接问题等。请检查后再试一次。" TextWrapping="Wrap"/>
    </StackPanel>
</ContentDialog>
