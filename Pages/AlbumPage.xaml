<Page
    x:Class="FluentCloudMusic.Pages.AlbumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentCloudMusic.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:classes="using:FluentCloudMusic.Services"
    xmlns:controls="using:FluentCloudMusic.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlTransparentBrush}">

    <controls:SongListView
        x:Name="SongList"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        IsAlbumButtonEnabled="False"
        ItemsSource="{x:Bind Path=Songs}">
        <controls:SongListView.Header>
            <StackPanel>
                <controls:ResourceDetailPresenter
                    ImageSource="{x:Bind Path=Album.ImageUrl,Mode=OneWay}"
                    Title="{x:Bind Path=Album.Name,Mode=OneWay}"
                    Description="{x:Bind Path=Album.Description,Mode=OneWay}"/>
                <controls:ToolBar
                    Margin="16,4,16,16"
                    PlayAllButtonClickedEvent="PlayAllButton_Click"
                    ShareButtonClickedEvent="ShareButton_Click"
                    DownloadButtonClickedEvent="DownloadButtonClickedEvent"/>
            </StackPanel>
        </controls:SongListView.Header>
    </controls:SongListView>
</Page>
