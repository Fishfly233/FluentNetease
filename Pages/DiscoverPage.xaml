<Page
    x:Class="FluentNetease.Pages.DiscoverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentNetease.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:classes="using:FluentNetease.Classes"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlTransparentBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate
                x:DataType="classes:Playlist"
                x:Key="PlaylistItemTemplate">
                <Grid
                    Width="180"
                    Height="230"
                    CornerRadius="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="165"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="55"/>
                    </Grid.RowDefinitions>
                    <Border
                        Height="150"
                        Width="150"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        CornerRadius="8">
                        <Border.Background>
                            <ImageBrush
                                x:Name="PlaylistCover"
                                ImageSource="{x:Bind Path=CoverPictureUrl}"/>
                        </Border.Background>
                    </Border>
                    <TextBlock
                        Width="150"
                        Height="80"
                        Grid.Row="2"
                        Text="{x:Bind Path=Name}"
                        TextWrapping="Wrap"
                        FontSize="15"
                        LineHeight="22"
                        MaxLines="2"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel
            Orientation="Vertical">
            <GridView
                x:Name="DailyRecommendPlaylistsGridView"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                CornerRadius="10"
                ItemsSource="{x:Bind Path=DailyRecommendPlaylists}"
                ItemTemplate="{StaticResource PlaylistItemTemplate}"
                ItemContainerStyle="{StaticResource PlaylistItemStyle}"
                ScrollViewer.VerticalScrollMode="Disabled"
                ScrollViewer.HorizontalScrollMode="Enabled"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                SelectionMode="None"
                IsItemClickEnabled="True"
                ItemClick="PlaylistItem_Click">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            Orientation="Vertical"
                            MaximumRowsOrColumns="1"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </StackPanel>
    </ScrollViewer>
</Page>
